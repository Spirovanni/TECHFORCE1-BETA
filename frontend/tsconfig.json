{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "dist/src/app/message.ts"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "listFiles": true
//    "include": [
//      "src/**/*" //or "../src/**/*.ts"
//    ]
  },
  "include": [
    "./src/app/message.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
